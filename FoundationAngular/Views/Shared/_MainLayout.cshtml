@using System.Web.Optimization
<!DOCTYPE html>
<html class="no-js" lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Application Title</title>
    <link href="~/images/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @RenderSection("head", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="off-canvas-wrap" data-offcanvas="">
        <div class="inner-wrap">
            <aside class="left-off-canvas-menu">
                <ul class="off-canvas-list">
                    <li><label class="first">Web Application</label></li>
                    <li>
                        <a class="small button">Menu Item 1</a>
                    </li>
                    <li>
                        <a class="small button">Menu Item 2</a>
                    </li>
                    <li>
                        <a class="small button">Menu Item 3</a>
                    </li>
                </ul>
                <hr>
            </aside>

            <nav class="tab-bar show-for-small">
                <a class="left-off-canvas-toggle menu-icon ">
                    <span data-bind="text:ApplicationName"></span>
                </a>
            </nav>
            <nav class="top-bar hide-for-small" data-topbar="">
                <ul class="title-area">
                    <li class="name">
                        <h1><a href="../" data-bind="text:ApplicationName"></a></h1>
                    </li>
                </ul>
                <section class="top-bar-section">
                    <ul class="right">
                        <li class="divider"></li>
                        <li class="divider"></li>
                        <li>
                            <a class="small button">Menu Item 1</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a class="small button">Menu Item 2</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a class="small button">Menu Item 3</a>
                        </li>
                        <li class="divider"></li>
                        <li class="divider"></li>
                    </ul>
                </section>

            </nav>

            <section id="main-content" data-bind="stopBinding: true">
                <div id="renderBody">
                    @RenderBody()
                </div>
            </section>
            <a class="exit-off-canvas"></a>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/foundation")
    <script>
            $(document).foundation();
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>
